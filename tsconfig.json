{
   "compilerOptions": {
      "lib": ["es6"],
      "target": "es2017",
      "module": "es6",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowJs": true,
      "removeComments": true,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ]
   }
}